{
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    "@semantic-release/github",
    [
      "@semantic-release/exec",
      {
        "generateNotesCmd": "./verifySemVerTags ${nextRelease.gitTag} ${nextRelease.gitHead} ${nextRelease.version} ${nextRelease.type}",
        "publishCmd": "./addSemVerTags ${nextRelease.gitTag} ${nextRelease.gitHead}"
      }
    ],
    [
      "@google/semantic-release-replace-plugin",
      {
        "replacements": [
          {
            "files": ["VERSION"],
            "from": "v-.*",
            "to": "v-${nextRelease.version}",
            "results": [
              {
                "file": "VERSION",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["VERSION"],
        "message": "chore(release): update version from ${lastRelease.version} to ${nextRelease.version} [skip ci]"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md"],
        "message": "chore(release): update CHANGELOG for version ${nextRelease.version} [skip ci]"
      }
    ]
  ],
  "tagFormat": "v-${version}"
}
