#!/bin/sh

projectRoot=$(a="/$0"; a=${a%/*}; a=${a:-.}; a=${a#/}/; cd "$a/.." || return; pwd)

docker build --tag defra/ffc-jenkins-pipeline-library-semantic-release --file semantic-release.Dockerfile .
docker run -u node:node -t --rm -e GH_TOKEN="$GH_TOKEN" -v "$projectRoot"/:/home/node/wrk --entrypoint ls defra/ffc-jenkins-pipeline-library-semantic-release -lah
