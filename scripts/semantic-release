#!/bin/sh

dryRun=true
if [ "$1" = "release" ]; then
  echo 'Dry run will be marked as false, the release is going to happen.'
  dryRun=false
fi

imageName=defra/ffc-jenkins-pipeline-library-semantic-release

docker build --tag $imageName --file Dockerfile.semantic-release .

# '--branches' needs to be removed
docker run -t --rm -e GH_TOKEN="$GH_TOKEN" $imageName \
  --debug --dry-run=$dryRun --branches psd-1013-global-install-2
